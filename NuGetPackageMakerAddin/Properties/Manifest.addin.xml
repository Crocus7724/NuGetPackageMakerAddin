                 _label="Make Package"
                 defaultHandler="NuGetPackageMakerAddin.MakeNupackHandler" />
    </Extension>
    <Extension path="/MonoDevelop/Ide/MainMenu/Edit">
        <CommandItem id="NuGetPackageMakerAddin.NuGetPackageMakerAddinCommands.MakeNuspec" />
